{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "jsx": "react-jsx",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "outDir": "dist",
      "moduleResolution": "node",
      "types": ["node", "jest", "@testing-library/jest-dom"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }